# Application
NODE_ENV=development
PORT=3000

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Playwright
PLAYWRIGHT_BROWSERS_PATH=0  # Use system browsers
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Logging
LOG_LEVEL=info

# Timeouts (in milliseconds)
PAGE_NAVIGATION_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=30000
PLAYWRIGHT_LAUNCH_TIMEOUT=60000

# Rate Limiting (requests per windowMs)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window per IP

# Slow Down (delay in ms after max requests)
SLOW_DOWN_DELAY_MS=500  # Add 500ms to each request after max requests
SLOW_DOWN_WINDOW_MS=900000  # 15 minutes
SLOW_DOWN_DELAY_AFTER=100  # Start adding delay after 100 requests
